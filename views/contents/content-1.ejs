<div class="main left">
    <% if (posts) { %>
    <% for(var i=0; i<posts.length; i++) { %>
    <div class="post">
        <h2><%= posts[i].title %></h2>
        <p class="post-meta">
            <span class="date"><%= posts[i].date.getFullYear() %>年<%= posts[i].date.getMonth() %>月<%= posts[i].date.getDate() %>日</span>
            <span class="author"><%= posts[i].author %></span>
        </p>
        <p></p>
        <p class="more"></p>
        <p class="tags"></p>
    </div>  
    <% } %>
    <% } %>
</div>
<div class="sidebar right">
    <% include ../widgets %>
</div>